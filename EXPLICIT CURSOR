--EXPLICIT CURSOR
DECLARE
    C_ID CUSTOMER.ID%TYPE;
    C_NAME CUSTOMER.NAME%TYPE;
    C_AMOUNT. CUSTOMER.AMOUNT%TYPE;
    CURSOR C1 IS SELECT ID, NAME,AMOUNT FROM CUSTOMER;
BEGIN
    OPEN C1;
    LOOP
       FETCH C1 INTO C_ID,C_NAME,C_AMOUNT;
       EXIT WHEN C1 %NOTFOUND;
       DBMS_OUTPUT.PUT_LINE(C_ID||' '||C_NAME|| ' '||C_AMOUNT);
    END LOOP;
    CLOSE C1;
END;
