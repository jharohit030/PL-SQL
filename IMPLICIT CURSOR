--CREATE TABLE CUSTOMER(ID INT, NAME VARCHAR(20), AGE INT, CITY VARCHAR(20), AMOUNT INT)
--INSERT INTO CUSTOMER VALUES(5,'KALPANA',20,'KOTA',2500)
--SELECT * FROM CUSTOMER
--IMPLICIT CURSORS
DECLARE 
       rows NUMBER;
BEGIN
     UPDATE CUSTOMER SET AMOUNT=AMOUNT+1000;
     IF sql%notfound THEN 
                 DBMS_OUTPUT.PUT_LINE('NO CUSTOMER SELECTED....');
     ELSIF sql%found THEN
                 rows:=sql%rowcount;
                 DBMS_OUTPUT.PUT_LINE(rows||'ROWS HAS BEEN SELECTED....');
     END IF;
END;
     
SELECT * FROM CUSTOMER
